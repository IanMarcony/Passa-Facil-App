<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".views.TelaCadastro">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="151dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="720dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Nome"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Nascimento"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_birthdate"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:inputType="date"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Nº Passa-Fácil"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_numpass"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:inputType="number"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Sexo"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_sexo"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="CPF"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_cpf"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:inputType="number"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="RG"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_rg"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Endereço"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_adress"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="E-mail"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Senha"
                android:textColor="#000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/register_btn_concludes"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="60dp"
            android:background="#f47d1f"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Concluir"
            android:textColor="#323131" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/register_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="97dp"
        android:layout_height="68dp"
        android:progressTint="#0D47A1"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline20"
        app:layout_constraintEnd_toStartOf="@+id/guideline22"
        app:layout_constraintHorizontal_bias="0.520"
        app:layout_constraintStart_toStartOf="@+id/guideline21"
        app:layout_constraintTop_toTopOf="@+id/guideline19"
        app:layout_constraintVertical_bias="0.39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="632dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="291dp" />

</androidx.constraintlayout.widget.ConstraintLayout>